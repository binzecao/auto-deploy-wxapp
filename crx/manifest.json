{
  "name": "auto-deploy-wxapp",
  "version": "1.0.1",
  "description": "Auto deploy wxapp to wx editor",
  "author": "zebin",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Auto deploy wxapp to wx editor",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/admin/index.html",
        "*://*/home/shopadmin*/",
        "*://*/home/siteadmin*/"
      ],
      "js": [
        "js/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 2
}